<h1>New Game</h1>

  <ul>
    <div class='box'>
    <% @arr.each do |letter| %>
    <li>
        <%= letter %>
    </li>
    <% end %>
    </div>
  </ul>

<form action="/score" method = "post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
  <input type="hidden" name="letters" value="<%= @arr.join("") %>">
  <label for="name">What is the longest word you can find ?</label>
  <input type="text" name="word" placeholder="Type your word...">
  <input type="submit" value="Try this!">
</form>
